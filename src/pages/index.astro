---
import '@/../styles/globals.css'
import { Hero } from '@/components/Hero'
import Layout from '@/layouts/Layout.astro'
import { About } from '@/components/About'
import { Experience_Education } from '@/components/Experience_Education'
import {Skills} from '@/components/Skills'
import { data } from "../data/cvs/data-analyst/cv";

const { about, experience, skills, 	education ,	title, subTitle ,	image } = data;

---


<Layout title="Carlos Pretto - CV" content={subTitle}>
	<Hero title={title} subTitle={subTitle} image={image}/>
	<About about={about} />
	<Experience_Education client:load jobs={true}, experience={experience} name="Experience"/>
	<Experience_Education jobs={false} name="Education", education={education}/>
	<Skills skills={skills}/>
</Layout>